<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="HotelManager" namespace="/pss" extends="default">
        <action name="Welcome">
            <result>/pages/Welcome.jsp</result>
        </action>
        
        <action name="add*" class="br.inf.pucrio.hotel.web.action.{1}Action" method="add">
        	<result name="input">/pages/{1}Form.jsp</result>
            <result name="success" type="redirectAction">
				<param name="actionName">Welcome</param>
				<param name="namespace">/pss</param>
            </result>
        </action>
        
        <action name="*Report" class="br.inf.pucrio.hotel.web.action.{1}ReportAction">
            <result>/pages/{1}Report.jsp</result>
        </action>
        
		<action name="*Search" class="br.inf.pucrio.hotel.web.action.{1}SearchAction">
            <result>/pages/{1}Result.jsp</result>
        </action>
        
        <action name="*Register" class="br.inf.pucrio.hotel.web.action.{1}RegisterAction">
            <result name="input">/pages/{1}Form.jsp</result>
            <result name="success" type="redirectAction">
				<param name="actionName">Welcome</param>
				<param name="namespace">/pss</param>
            </result>
        </action>
        
        <action name="*Form" class="br.inf.pucrio.hotel.web.action.RedirectAction">
            <result>/pages/{1}Form.jsp</result>
        </action>
        
    </package>
</struts>
