<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC 
  "-//OpenSymphony Group//XWork Validator 1.0.2//EN" 
  "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
  
<validators>
	<field name="clientName">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>Nome do cliente é obrigatório</message>
		</field-validator>
	</field>
	<field name="cpf">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>CPF é obrigatório</message>
		</field-validator>
	</field>
	<field name="birthday">
		<field-validator type="date">
			<param name="min">01/01/1800</param>
			<param name="max">01/01/2100</param>
			<message>A data deve estar entre 01/01/1800 e 01/01/2100.</message>
		</field-validator>
		<field-validator type="regex">
			<param name="expression">[0-9]{2}/[0-9]{2}/[0-9]{4}</param>
			<message>Data deve estar no formato DD/MM/AAAA.</message>
		</field-validator>
	</field>
	<field name="cpf">
		<field-validator type="regex">
			<param name="expression">[0-9]{3}.[0-9]{3}.[0-9]{3}-[0-9]{2}</param>
			<message>CPF deve estar no formato 000.000.000-00.</message>
		</field-validator>
	</field>
</validators>